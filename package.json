{
  "name": "@netlify/open-api",
  "version": "0.1.1",
  "description": "Netlify's open-api definition as a module",
  "main": "js/swagger.json",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "browserify": "^16.0.0",
    "budo": "^11.3.2",
    "cpx": "^1.5.0",
    "js-yaml": "^3.12.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-reporter": "^6.0.0",
    "postcss-url": "^8.0.0",
    "rimraf": "^2.6.2",
    "swagger-ui": "^3.17.5"
  },
  "scripts": {
    "clean": "rimraf js ui && mkdirp js ui",
    "prepare": "run-s build",
    "build": "run-s clean js site",
    "js": "node ./src/generate-js-module.js",
    "site": "run-p site:*",
    "site:static": "cpx 'src/site/{index.html,static/**}' ui",
    "site:swagger": "cpx 'js/swagger.{json,yml}' ui",
    "site:css": "postcss src/site/index.css -o ui/bundle.css",
    "site:js": "browserify src/site/index.js -o ui/bundle.js",
    "start": "run-s build serve",
    "serve": "budo --dir ui"
  },
  "files": [
    "js/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netlify/open-api.git"
  },
  "keywords": [
    "netlify",
    "swagger",
    "open-api"
  ],
  "author": "Netlify",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/netlify/open-api/issues"
  },
  "homepage": "https://github.com/netlify/open-api#readme"
}
